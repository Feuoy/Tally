<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.feuoy.tally.activity.CurveReportActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_class_report_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFC107"
            android:gravity="center"
            android:text="收支曲线"
            android:textColor="@color/mdtp_white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_chart_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundChart">


        <LinearLayout
            android:id="@+id/ll_chart_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/pichart_2"
                android:layout_width="match_parent"
                android:layout_height="353dp"></com.github.mikephil.charting.charts.LineChart>

        </LinearLayout>


        <TableLayout
            android:id="@+id/table_class_report_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_chart_2"
            android:layout_marginTop="50dp"
            android:background="#AEFFC107">

            <TableRow>

                <ImageButton
                    android:id="@+id/done_to_read_2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#DFFFEB3B"
                    android:src="@drawable/choose_calendar"
                    android:textSize="30dp" />

            </TableRow>

        </TableLayout>


    </RelativeLayout>


</LinearLayout>
